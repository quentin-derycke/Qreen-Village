{% extends 'base.html.twig' %}

{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}

	

<!--- Jumbotron-->
<div class=" p-5 mb-4 bg-primary text-light" >
  <!--- Breadcrumbs-->
	<nav style=" --bs-breadcrumb-divider: '>';"   aria-label="breadcrumb">
		<ol class="breadcrumb bg-primary">
			<li class="breadcrumb-item">
				<a class='text-decoration-none text-light' href='{{ path('home') }}'>
					Accueil
				</a>
			</li>
			<li class="breadcrumb-item  ">
				<a class='text-decoration-none text-light' href="{{path('category_index')}}">
					Categories
				</a>
			</li>
			<li class="breadcrumb-item" aria-current='page'>
				{{category.name}}
			</li>
		</ol>
	</nav>
      <div class="container-fluid py-5">
	
        <h1 class="display-5 fw-bold">{{category.name}}</h1>
        <p class="col-md-8 fs-4">{{category.description}}</p>
      
      </div>
    </div>


	<!--- Cards -->
	<div class='container '>
		<div class=' row mt-4 align-items-center justify-content-center'>
			{% for category in categories %}


				<div class="card  border-primary  mb-3 me-4" style="max-width: 20rem;">
					<a href='{{path('product_category', {category : category.id})}}'>
						<div class="card-body">
							<img src="https://dummyimage.com/250x150/000/fff" class="card-img-top" alt="{{ category.name }}">


							<h5 class="card-title text-black mt-2">
								{{ category.name }}
							</h5>


						</div>
					</a>
				</div>


			{% endfor %}
			
		</div>
	</div>
{% endblock %}
