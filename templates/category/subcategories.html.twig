{% extends 'base.html.twig' %}

{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}

	<!--- Breadcrumbs-->
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
		<ol class="breadcrumb bg-light">
			<li class="breadcrumb-item">
				<a href='{{ path('home') }}'>Accueil</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_index')}}">Categories</a>
			</li>
			<li class="breadcrumb-item" aria-current='page'>{{category.name}}</li>
		</ol>
	</nav>


	<div class='container '>
		<div class=' row mt-4 align-items-center justify-content-center'>
			{% for category in categories %}


				<div class="card  bg-light  mb-3 me-4" style="max-width: 20rem;">

					<div class="card-body">
						<a href='{{path('product_category', {category : category.id})}}'>
							<h4 class="card-title">{{ category.name }}</h4>
							<p class="card-text"></p>
						</div>
					</a>
				</div>


			{% endfor %}
		</div>
	</div>
{% endblock %}
