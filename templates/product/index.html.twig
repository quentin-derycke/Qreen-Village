{% extends 'base.html.twig' %}

{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}
	<!--- Breadcrumbs-->
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
		<ol class="breadcrumb bg-light">
			<li class="breadcrumb-item">
				<a href='{{ path('home') }}'>
					Accueil
				</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_index')}}">
					Categories
				</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_subcategories',{category : category.childs.id})}}">
					{{category.childs.name}}
				</a>
			</li>
			<li class="breadcrumb-item" aria-current='page'>
				{{category.name}}
			</li>
		</ol>
	</nav>

	<!-- Products List -->
	<div class="container px-4 px-lg-5 mt-5">
		<div class="row row-cols-1 justify-content-center">
			{% for product in products %}


				<div class="card bg-light col-12 mt-4">
					<a class='text-decoration-none' href="{{path('product_details', { 'id' : product.id })}}">

						<div
							class="row g-0 ">
							<!-- Product image-->
							<div class="col-md-4">

								<img class="img-fluid" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="...">
							</div>
							<!-- Product details-->

							<div class="card-body p-4 col-md-8">
								<div class="col row">

									<div
										class="text-center col-md-2">
										<!-- Product name-->
										<h5 class="fw-bolder text-primary">
											{{product.name}}
										</h5>
									</div>
									<div class='col-md-4'>
										<p class='text-primary'>
											{{product.description}}
										</p>
									</div>
									<!-- Product price-->
									<div class='col-md-2'>
										<p class='text-primary'>
											{{product.price}}
											â‚¬
										</p>
									</div>

								</div>

							</div>

						</div>
					</a>

				</div>


			{% endfor %}
		</div>
	</div>
	<div class="navigation d-flex justify-content-center mt-2 ">
		{{ knp_pagination_render(products) }}
	</div>
{% endblock %}
