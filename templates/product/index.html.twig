{% extends 'base.html.twig' %}

{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}
	<!--- Breadcrumbs-->
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
		<ol class="breadcrumb bg-light">
			<li class="breadcrumb-item">
				<a href='{{ path('home') }}'>Accueil</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_index')}}">Categories</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_subcategories',{category : category.childs.id})}}">{{category.childs.name}}</a>
			</li>
			<li class="breadcrumb-item" aria-current='page'>{{category.name}}</li>
		</ol>
	</nav>

	<!-- Products List -->
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			{% for product in products %}          
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="...">
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{product.name}}</h5>
                                    <!-- Product price-->
                                    {{product.price}}
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-primary mt-auto" href="{{path('product_details', { 'id' : product.id })}}">details</a></div>
                            </div>
                        </div>
                    </div>
                   

		{% endfor %}
	</div>
</div>{% endblock %}
