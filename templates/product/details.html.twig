{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block body %}
	<!--- Breadcrumbs-->
	<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
		<ol class="breadcrumb bg-light">
			<li class="breadcrumb-item">
				<a href='{{ path('home') }}'>Accueil</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_index')}}">Categories</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{path('category_subcategories',{category : product.categoryId.childs.id})}}">{{product.categoryId.childs.name}}</a>
			</li>
			<li class="breadcrumb-item" aria-current='page'><a href="{{path('product_category',{category : product.categoryId.id})}}">{{product.categoryId.name}}</a></li>
			<li class="breadcrumb-item" aria-current='page'>{{product.name}}</li>
		</ol>
	</nav>

	<section class='container py-5 px-lg-5 my-5  align-items-center'>

	{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
		
	<div class='row'>
	<div class='col-md-6'>
<img src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="dummy" class="car-img-top img-thumbnail img mb-5-md-0">
</div>
<div class='col-md-6'>
		<h1 class ='display-5 fw-bolder'>{{product.name}}</h1>
		<h4 class= 'fs-5 mb-5'>{{product.price  | format_currency('EUR')}}</h4>
		<p class ='lead'>{{product.description}}</p>
		  {{ form_start(form, {'attr': {'class': 'mt-4 p-4 bg-light  '}}) }}
    <div class="form-group">
        {{ form_label(form.quantity) }}
        {{ form_widget(form.quantity, {
            'attr': {
                'class': 'form-control text-center me-3  ' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.quantity) }}
        </div>
    </div>
    {{ form_widget(form.add, {'attr': {'class': ' mt-4 btn btn-outline-primary flex-shrink-0  '}}) }}
    {{ form_end(form) }}
</div>
</div>
</div>
	</section>
{% endblock %}
